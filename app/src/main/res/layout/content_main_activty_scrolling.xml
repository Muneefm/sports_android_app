<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mnf.sports.Activity.MainActivtyScrolling"
    tools:showIn="@layout/activity_main_scrolling">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:cardElevation="3dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true"
        android:id="@+id/cardLogo">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="0dp"
        app:layout_collapseMode="pin"
        android:id="@+id/grupLogo"
        android:layout_height="150dp"
        android:weightSum="4"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="1"
            android:id="@+id/ib"
            android:src="@drawable/b"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/ig"

            android:layout_weight="1"
            android:src="@drawable/g"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/iy"

            android:layout_weight="1"
            android:src="@drawable/y"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:id="@+id/ir"

            android:src="@drawable/r"
            />




    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:cardElevation="3dp"
        android:layout_below="@+id/cardLogo"

        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true"
        android:id="@+id/cardFeed">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/large_text" />
    </android.support.v7.widget.CardView>
</RelativeLayout>

</android.support.v4.widget.NestedScrollView>
