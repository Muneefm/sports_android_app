<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    custom:cardElevation="1dp"
    custom:cardBackgroundColor="@android:color/white"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    card_view:cardElevation="1dp"
    android:layout_marginBottom="3dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardUseCompatPadding="true"
    android:id="@+id/cardFeedItem">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <ImageView
            android:layout_width="100dp"
            android:id="@+id/feedImg"
            android:scaleType="centerCrop"
            android:layout_height="120dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/feedImg"
            android:text=""
            android:id="@+id/mainString"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textSize="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/feedImg"
            android:text=""
            android:layout_below="@+id/mainString"
            android:id="@+id/subString"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:id="@+id/authorFeed"
            android:paddingBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>