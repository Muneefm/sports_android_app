<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    custom:cardElevation="1dp"
    custom:cardBackgroundColor="@android:color/white"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    card_view:cardElevation="1dp"
    android:layout_marginBottom="3dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardUseCompatPadding="true"
    android:id="@+id/orderCa">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/mainCont"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/contCards"
        android:layout_height="90dp">
        <LinearLayout
            android:layout_width="match_parent"
           android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:id="@+id/logoSport"
            />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18dp"
                    android:id="@+id/eventName"
                    android:paddingLeft="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""

                    android:layout_marginTop="7dp"
                    android:id="@+id/statusEv"
                    android:layout_below="@+id/eventName"
                    android:layout_marginLeft="10dp"
                    />



            </RelativeLayout>
        </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:id="@+id/winColorContainer"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Won By"
                    android:layout_marginTop="4dp"
                    android:layout_centerHorizontal="true"

                    android:id="@+id/textW"
                    />
                <View
                    android:layout_width="20dp"
                    android:layout_below="@+id/textW"
                    android:layout_height="20dp"
                    android:layout_marginTop="7dp"
                    android:id="@+id/winView"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/circle_red"
                    />

            </RelativeLayout>






</RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/winnersCards"
            android:layout_below="@+id/contCards"
            android:layout_marginBottom="0dp"
            android:visibility="gone"

            android:layout_height="100dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Winners :"
                android:layout_marginLeft="3dp"

                android:textColor="@color/grey700"
                android:id="@+id/resultHead"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:visibility="gone"

                android:gravity="center"
                android:layout_centerVertical="true"
                android:id="@+id/comingUp"
                android:text="Coming Up...."
                />
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:id="@+id/winnerLinear"
    android:visibility="gone"
    android:layout_marginTop="5dp"
    android:layout_below="@+id/resultHead"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/winnerOne"
            android:text="1."
            />
        <View
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:id="@+id/pos1"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/winnerTwo"

            android:text="2. "
            />
        <View
            android:layout_width="70dp"
            android:layout_height="3dp"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            android:id="@+id/pos2"

            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/winnerThree"
            android:text="3. "
            />
        <View
            android:layout_width="30dp"
            android:layout_height="3dp"
            android:id="@+id/pos3"
            android:layout_marginRight="70dp"

            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

</LinearLayout>



        </RelativeLayout>


</RelativeLayout>
</android.support.v7.widget.CardView>