<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    custom:cardElevation="1dp"
    custom:cardBackgroundColor="@android:color/white"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    card_view:cardElevation="1dp"
    android:layout_marginBottom="3dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardUseCompatPadding="true"
    android:id="@+id/orderCa">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/mainCont"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/contCards"
        android:layout_height="100dp">
        <LinearLayout
            android:layout_width="match_parent"
           android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/Running"
            />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 Race Boys"
                    android:layout_marginTop="25dp"
                    android:textSize="20dp"
                    android:id="@+id/eventName"
                    android:paddingLeft="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upcoming"
                    android:layout_marginTop="7dp"
                    android:layout_below="@+id/eventName"
                    android:layout_marginLeft="10dp"
                    />



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:layout_marginRight="20dp"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team Won"
                    android:layout_centerHorizontal="true"

                    android:id="@+id/textW"
                    />
                <View
                    android:layout_width="20dp"
                    android:layout_below="@+id/textW"
                    android:layout_height="20dp"
                    android:layout_marginTop="7dp"

                    android:layout_centerHorizontal="true"
                    android:background="@drawable/circle_red"
                    />

            </RelativeLayout>



        </LinearLayout>



</RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/winnersCards"
            android:layout_below="@+id/contCards"
            android:layout_marginBottom="0dp"

            android:layout_height="100dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Winners :"
                android:id="@+id/resultHead"
                />
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_below="@+id/resultHead"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerVertical="true"

            android:text="1. Winner Lastname"
            />
        <View
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:layout_centerVertical="true"
            android:background="@color/red500"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerVertical="true"

            android:text="2. Winner middlename Lastname"
            />
        <View
            android:layout_width="70dp"
            android:layout_height="3dp"
            android:layout_centerVertical="true"

            android:background="@color/green_500"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerVertical="true"

            android:text="3. Winner name Lastname"
            />
        <View
            android:layout_width="30dp"
            android:layout_height="3dp"
            android:layout_centerVertical="true"

            android:background="@color/yellow_500"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

</LinearLayout>



        </RelativeLayout>


</RelativeLayout>
</android.support.v7.widget.CardView>