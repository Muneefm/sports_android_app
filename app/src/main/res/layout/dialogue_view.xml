<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group:"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="17dp"
        android:textColor="@color/grey900"
        />
<RadioGroup
    android:layout_width="wrap_content"
    android:paddingLeft="10dp"
    android:layout_marginTop="10dp"
    android:id="@+id/grpRadioGroup"
    android:layout_height="wrap_content">
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rb"
        android:text="@string/blizardians"
        />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rg"

        android:text="@string/gravitans"
        />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yagorians"
        android:id="@+id/ry"

        />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/racovians"
        android:id="@+id/rr"

        />

</RadioGroup>
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"

            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year:"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="17dp"
            android:textColor="@color/grey900"
            />

        <RadioGroup
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/grpRadioYear"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yrone"
                android:text="1st Year"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yrtwo"

                android:text="2nd Year"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3rd Year"
                android:id="@+id/yrthree"

                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4th Year"
                android:id="@+id/yrfour"

                />

        </RadioGroup>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/id_class"
                android:text=""
                android:layout_marginLeft="40dp"
                app:met_primaryColor="@color/pink100"
                android:hint="Class"
                app:met_floatingLabel="highlight"/>
</LinearLayout>
    </LinearLayout>




</LinearLayout>


</RelativeLayout>